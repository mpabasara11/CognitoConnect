<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused State -->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- Light gradient background -->
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#F0F4F8"
                android:angle="90" />
            <!-- Slightly rounded corners for a modern touch -->
            <corners android:radius="12dp" />
            <!-- Sleek blue stroke for focused state -->
            <stroke android:color="#0277BD" android:width="5dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <!-- Light grey background -->
            <solid android:color="#F5F5F5" />
            <!-- Slightly rounded corners for a modern touch -->
            <corners android:radius="12dp" />
            <!-- Light grey stroke for default state -->
            <stroke android:color="#B0BEC5" android:width="2dp" />
        </shape>
    </item>

</selector>
