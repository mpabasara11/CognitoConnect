<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controllers.Controller_SignUp"
    android:background="@drawable/background_1">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:inputType="numberSigned"
        android:minHeight="48dp"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="#F3EEEE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="225dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/user_icon" />

    <EditText
        android:id="@+id/txt_signup_phone"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#ffffff"
        android:hint="Mobile Number"
        android:inputType="numberSigned"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#F3EEEE"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/txt_signup_pass"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ffffff"
        android:ems="15"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#ECE5E5"
        app:layout_constraintEnd_toEndOf="@+id/txt_signup_phone"
        app:layout_constraintStart_toStartOf="@+id/txt_signup_phone"
        app:layout_constraintTop_toBottomOf="@+id/txt_signup_phone" />

    <EditText
        android:id="@+id/txt_signup_conf_pass"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ffffff"
        android:ems="15"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#F8F6F6"
        app:layout_constraintEnd_toEndOf="@+id/txt_signup_pass"
        app:layout_constraintStart_toStartOf="@+id/txt_signup_pass"
        app:layout_constraintTop_toBottomOf="@+id/txt_signup_pass" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_type1"
        android:text="Create Account"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/txt_signup_conf_pass"
        app:layout_constraintStart_toStartOf="@+id/txt_signup_conf_pass"
        app:layout_constraintTop_toBottomOf="@+id/txt_signup_conf_pass" />


</androidx.constraintlayout.widget.ConstraintLayout>