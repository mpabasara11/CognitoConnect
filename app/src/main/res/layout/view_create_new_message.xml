<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.Controller_Create_New_Message"
    android:background="@drawable/background_1">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="200dp"
        android:inputType="numberSigned"
        android:minHeight="48dp"
        android:text="Create New Chat"
        android:textAlignment="center"
        android:textColor="#F3EEEE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_new_chat_phone"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/input_textbox_type_1"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:hint="Enter Mobile Number"
        android:inputType="numberSigned"
        android:paddingStart="10dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_create_chat"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_type1"
        android:text="Create"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/txt_new_chat_phone"
        app:layout_constraintStart_toStartOf="@+id/txt_new_chat_phone"
        app:layout_constraintTop_toBottomOf="@+id/txt_new_chat_phone" />


</androidx.constraintlayout.widget.ConstraintLayout>