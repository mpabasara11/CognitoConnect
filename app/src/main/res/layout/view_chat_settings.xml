<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2042"
    android:padding="16dp"
    tools:context=".Controllers.Controller_Chat_Settings">

    <TextView
        android:id="@+id/lbl_chat_settings"
        android:layout_width="357dp"
        android:layout_height="39dp"
        android:text="Chat Settings"
        android:textColor="#F3EEEE"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFeatureDescription"

        android:layout_width="311dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="Facial Expression Analysis"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/divider"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/tvFeatureDetails"

        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="When this feature is enabled, the app will use your device's camera to analyze your facial expressions while you send messages. The analysis results will be shared with the recipient of your messages to provide additional emotional context. Please note that this may involve sharing sensitive data about your emotional state."
        android:textColor="#A6FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvFeatureDescription"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="@+id/tvFeatureDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvFeatureDescription" />

    <Switch
        android:id="@+id/switch_facial_exp"

        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Enable Facial Expression Analysis"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/tvFeatureDetails"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="@+id/tvFeatureDetails"
        app:layout_constraintTop_toBottomOf="@+id/tvFeatureDetails" />

    <View
        android:id="@+id/divider"
        android:layout_width="391dp"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/lbl_chat_settings"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/lbl_chat_settings"
        app:layout_constraintTop_toBottomOf="@+id/lbl_chat_settings" />

    <View
        android:id="@+id/divider2"
        android:layout_width="391dp"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/switch_facial_exp"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="@+id/switch_facial_exp"
        app:layout_constraintTop_toBottomOf="@+id/switch_facial_exp" />

    <TextView
        android:id="@+id/tvFeatureDescription2"

        android:layout_width="311dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="Last Seen"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/divider2"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/divider2"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/tvFeatureDetails1"

        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="This feature shows when you were last active on the app, allowing your contacts to see your last online time."
        android:textColor="#A6FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvFeatureDescription2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvFeatureDescription2"
        app:layout_constraintTop_toBottomOf="@+id/tvFeatureDescription2" />


    <Switch
        android:id="@+id/switch_last_seen"

        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Enable Last Seen"
        android:textColor="#FFFFFF"

        app:layout_constraintEnd_toEndOf="@+id/tvFeatureDetails1"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="@+id/tvFeatureDetails1"
        app:layout_constraintTop_toBottomOf="@+id/tvFeatureDetails1" />


    <View
        android:id="@+id/divider3"
        android:layout_width="391dp"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/listDivider"

        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/switch_last_seen"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="@+id/switch_last_seen"
        app:layout_constraintTop_toBottomOf="@+id/switch_last_seen" />

</androidx.constraintlayout.widget.ConstraintLayout>
